@{
    ViewData["Title"] = "Home Page";
}

<h2>Upload XML File</h2>

<form id="uploadForm" action="/Home/ReadXML" method="post" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <label for="file" class="form-label">Choose an XML file to upload:</label>
        <input type="file" id="file" name="file" class="form-control" accept=".xml" required />
    </div>
    <button type="submit" class="btn btn-primary">Preview Data</button>
</form>

@if (ViewBag.XmlData != null && ViewBag.XmlRaw != null)
{
    <div class="mt-4">
        <h3>Preview Data</h3>
        <form action="/Home/SaveToDatabase" method="post">
            <input type="hidden" name="xmlData" value="@Html.Raw(ViewBag.XmlRaw)" />
            <table class="table">
                <thead>
                    <tr>
                        <th>Data</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.XmlData)
                    {
                        <tr>
                            <td>@item</td>
                        </tr>
                    }
                </tbody>
            </table>
            <button type="submit" class="btn btn-success">Save to Database</button>
        </form>
    </div>
}


